<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane 
   fx:id="mainPane" 
   stylesheets="@../styles/common.css" 
   xmlns="http://javafx.com/javafx/23.0.1" 
   xmlns:fx="http://javafx.com/fxml/1"
>

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region 
            styleClass="top-menu-region" 
         />

         <!-- Top Menu Buttons -->
         <StackPane 
            BorderPane.alignment="CENTER"
         >
            <children>
               <FlowPane 
                  styleClass="flow-pane-padding"
               >
                  <children>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="homeMenuLibrarian"
                               styleClass="home-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedHomeMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="searchMenuLibrarian"
                               styleClass="search-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSearchMenyLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="overdueMenuLibrarian"
                               styleClass="overdue-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedOverdueMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="libraryMenuLibrarian"
                               styleClass="manage-library-icon-inactive"
                           />
                           <Region
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="usersMenuLibrarian"
                               styleClass="manage-users-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedManageUsersMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="accountMenuLibrarian"
                               styleClass="account-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedAccountMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="signOutMenuLibrarian"
                               styleClass="sign-out-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSignOutMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox 
         alignment="TOP_CENTER" 
         spacing="10.0" 
         BorderPane.alignment="CENTER"
      >
         <StackPane>
            <children>
               <VBox 
                  styleClass="results-box"
               >
                  <children>
                     <HBox 
                        alignment="CENTER"
                     >
                        <children>
                           <Label 
                              fx:id="subMenuTitle" 
                              text="Copies being managed for item:"
                           >
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin>
                           </Label>
                        </children>
                     </HBox>
                     <HBox 
                        alignment="CENTER_LEFT"
                     >
                        <children>
                           <Label 
                              fx:id="itemTitleText" 
                              styleClass="label-title" 
                              text="Title" 
                           />
                           <Label 
                              fx:id="itemTypeText" 
                              text="Type"
                           >
                              <HBox.margin>
                                 <Insets 
                                    left="10.0" 
                                 />
                              </HBox.margin>
                           </Label>
                        </children>
                     </HBox>
                     <HBox>
                        <children>
                           <Label 
                              fx:id="itemCreatorText" 
                              text="Creator"
                           >
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin>
                           </Label>
                           <Label 
                              fx:id="itemIdText" 
                              text="IdField"
                           >
                              <HBox.margin>
                                 <Insets 
                                    left="10.0" 
                                 />
                              </HBox.margin>
                           </Label>
                        </children>
                     </HBox>
                  </children>
                  <StackPane.margin>
                     <Insets 
                        left="10.0" 
                        right="10.0" 
                        top="5.0" 
                     />
                  </StackPane.margin>
               </VBox>
            </children>
         </StackPane>

         <!-- Search Box -->
         <StackPane>
            <children>
               <VBox 
                  alignment="CENTER" 
                  styleClass="results-box"
               >
                  <children>
                     <HBox 
                        alignment="CENTER" 
                        spacing="10.0"
                     >
                        <children>
                           <Label 
                              alignment="TOP_LEFT" 
                              text="Scan or enter barcode to add copy" 
                              HBox.hgrow="ALWAYS" 
                           />
                           <TextField 
                              fx:id="barcodeField" 
                              styleClass="text-field" 
                           />
                           <Button 
                              fx:id="addCopyButton" 
                              mnemonicParsing="false" 
                              onMouseClicked="#clickedAddCopyButton" 
                              styleClass="button" 
                              text="Add" 
                           />
                        </children>
                     </HBox>
                     <!-- Error/Status Message Label -->
                     <Label 
                        fx:id="statusLabel" 
                        styleClass="error-label" 
                        visible="false" 
                     />
                  </children>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <StackPane.margin>
                     <Insets 
                        left="10.0" 
                        right="10.0" 
                     />
                  </StackPane.margin>
               </VBox>
            </children>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>

         <!-- Results Box -->
         <StackPane 
            VBox.vgrow="ALWAYS"
         >
            <children>
               <VBox 
                  styleClass="results-box" 
                  VBox.vgrow="ALWAYS"
               >
                  <padding>
                     <Insets 
                        left="10.0" 
                        right="10.0" 
                     />
                  </padding>
                  <children>

                     <!-- Scrollable results -->
                     <ScrollPane 
                        fx:id="ItemCopyScrollPane" 
                        fitToWidth="true" 
                        hbarPolicy="NEVER" 
                        styleClass="scroll-pane-custom" 
                        VBox.vgrow="ALWAYS"
                     >
                        <content>
                           <VBox 
                              fx:id="ItemCopyContainer" 
                              spacing="10.0" 
                              styleClass="results-box" 
                           />
                        </content>
                     </ScrollPane>

                  </children>
                  <StackPane.margin>
                     <Insets 
                        bottom="5.0" 
                        left="10.0" 
                        right="10.0" 
                     />
                  </StackPane.margin>
               </VBox>
            </children>
         </StackPane>

      </VBox>
   </center>
</BorderPane>
