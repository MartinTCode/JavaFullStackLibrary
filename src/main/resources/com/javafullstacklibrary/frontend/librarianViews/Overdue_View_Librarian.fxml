<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    fx:id="mainPane"
    minHeight="400.0"
    minWidth="600.0"
    prefHeight="400.0"
    prefWidth="600.0"
    stylesheets="@../styles/common.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
>

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region styleClass="top-menu-region" />

         <!-- Top Menu Buttons -->
         <StackPane BorderPane.alignment="CENTER">
            <children>
               <FlowPane styleClass="flow-pane-padding">
                  <children>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="homeMenuLibrarian"
                               styleClass="home-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedHomeMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="searchMenuLibrarian"
                               styleClass="search-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSearchMenyLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="overdueMenuLibrarian"
                               styleClass="overdue-icon-inactive"
                           />
                           <Region
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="libraryMenuLibrarian"
                               styleClass="manage-library-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedLibraryMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="usersMenuLibrarian"
                               styleClass="manage-users-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedUsersMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="accountMenuLibrarian"
                               styleClass="account-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedAccountMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="signOutMenuLibrarian"
                               styleClass="sign-out-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSignOutMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox
          alignment="TOP_CENTER"
          spacing="10.0"
          BorderPane.alignment="CENTER"
      >

         <!-- Search Box -->
         <StackPane>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>

         <!-- Results Box -->
         <StackPane VBox.vgrow="ALWAYS">
            <children>
               <VBox
                   styleClass="results-box"
                   VBox.vgrow="ALWAYS"
               >
                  <padding>
                     <Insets
                         left="10.0"
                         right="10.0"
                     />
                  </padding>
                  <children>

                     <!-- Result count label -->
                     <Label
                         fx:id="resultsCountLabel"
                         styleClass="label-title"
                         text="Overdue Loans"
                     >
                        <padding>
                           <Insets left="10.0" />
                        </padding>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>

                     <!-- Scrollable results -->
                     <ScrollPane
                         fx:id="overdueScrollPane"
                         fitToWidth="true"
                         hbarPolicy="NEVER"
                         styleClass="scroll-pane-custom"
                         VBox.vgrow="ALWAYS"
                     >
                        <content>
                           <VBox
                               fx:id="overdueContainer"
                               spacing="10.0"
                               styleClass="results-box"
                           />
                        </content>
                     </ScrollPane>

                     <!-- Load more button -->
                     <HBox alignment="BOTTOM_CENTER">
                        <children>
                           <Button
                               fx:id="loadMoreButton"
                               alignment="CENTER"
                               contentDisplay="CENTER"
                               mnemonicParsing="false"
                               onAction="#handleLoadMoreResults"
                               text="Show more of the search results"
                               visible="false"
                           >
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin>
                           </Button>
                        </children>
                     </HBox>

                  </children>
                  <StackPane.margin>
                     <Insets
                         bottom="5.0"
                         left="10.0"
                         right="10.0"
                     />
                  </StackPane.margin>
               </VBox>
            </children>
         </StackPane>

      </VBox>
   </center>

</BorderPane>
