<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    fx:id="mainPane"
    minHeight="400.0"
    minWidth="600.0"
    prefHeight="400.0"
    prefWidth="600.0"
    stylesheets="@../styles/common.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
>

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region styleClass="top-menu-region" />

         <!-- Top Menu Buttons -->
         <StackPane BorderPane.alignment="CENTER">
            <children>
               <FlowPane styleClass="flow-pane-padding">
                  <children>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="homeMenuLibrarian"
                               styleClass="home-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedHomeMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="searchMenuLibrarian"
                               styleClass="search-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSearchMenyLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="overdueMenuLibrarian"
                               styleClass="overdue-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedOverdueMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="libraryMenuLibrarian"
                               styleClass="manage-library-icon-inactive"
                           />
                           <Region
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="usersMenuLibrarian"
                               styleClass="manage-users-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedManageUsersMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="accountMenuLibrarian"
                               styleClass="account-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedAccountMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="signOutMenuLibrarian"
                               styleClass="sign-out-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSignOutMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox
          alignment="TOP_CENTER"
          spacing="10.0"
          BorderPane.alignment="CENTER"
      >

         <!-- Search Box -->
         <StackPane>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>

         <!-- Results Box -->
         <StackPane VBox.vgrow="ALWAYS">
            <children>
               <GridPane
                   hgap="20.0"
               >
                 <columnConstraints>
                   <ColumnConstraints
                       hgrow="SOMETIMES"
                       minWidth="10.0"
                       prefWidth="100.0"
                   />
                   <ColumnConstraints
                       hgrow="SOMETIMES"
                       minWidth="10.0"
                       prefWidth="100.0"
                   />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints
                       minHeight="10.0"
                       prefHeight="30.0"
                       vgrow="SOMETIMES"
                   />
                 </rowConstraints>
                  <padding>
                     <Insets
                         bottom="10.0"
                         left="10.0"
                         right="10.0"
                     />
                  </padding>
                  <children>
                     <VBox
                         alignment="TOP_CENTER"
                         spacing="100.0"
                         styleClass="results-box"
                     >
                        <children>
                           <Label
                               styleClass="label-title"
                               text="Add new item"
                           />
                           <VBox
                               alignment="TOP_CENTER"
                           >
                              <children>
                                 <Label
                                     text="Choose item type"
                                 />
                                 <ComboBox
                                     fx:id="itemTypeComboBox"
                                     prefWidth="150.0"
                                 />
                              </children>
                           </VBox>
                           <Button
                               fx:id="continueNewItemButton"
                               mnemonicParsing="false"
                               text="Continue"
                               onMouseClicked="#continueNewItemButtonClicked"
                           />
                        </children>
                     </VBox>
                     <VBox
                         alignment="TOP_CENTER"
                         prefHeight="200.0"
                         prefWidth="100.0"
                         spacing="100.0"
                         styleClass="results-box"
                         GridPane.columnIndex="1"
                     >
                        <children>
                           <Label
                               styleClass="label-title"
                               text="Modify item (incl. copies)"
                           />
                           <VBox>
                              <children>
                                 <Label
                                     text="Enter search term"
                                 />
                                 <TextField
                                     fx:id="modifyItemSearchFieldLibrarian"
                                 />
                              </children>
                           </VBox>
                           <Button
                               fx:id="continueModifyItemButton"
                               mnemonicParsing="false"
                               text="Continue"
                               onMouseClicked="#continueModifyItemButtonClicked"
                           />
                        </children>
                     </VBox>
                  </children>
               </GridPane>
            </children>
         </StackPane>

      </VBox>
   </center>

</BorderPane>
