<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    fx:id="mainPane"
    stylesheets="@../styles/common.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
>

    <!-- Top Menu Section -->
    <top>
        <StackPane>
            <!-- Background -->
            <Region
                styleClass="top-menu-region"
            />

            <!-- Top Menu Buttons -->
            <StackPane
                BorderPane.alignment="CENTER"
            >
                <children>
                    <FlowPane
                        styleClass="flow-pane-padding"
                    >
                        <children>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="homeMenuLibrarian"
                                        styleClass="home-icon-active"
                                    />
                                    <Region
                                        onMouseClicked="#clickedHomeMenuLibrarian"
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="searchMenuLibrarian"
                                        styleClass="search-icon-active"
                                    />
                                    <Region
                                        onMouseClicked="#clickedSearchMenyLibrarian"
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="overdueMenuLibrarian"
                                        styleClass="overdue-icon-active"
                                    />
                                    <Region
                                        onMouseClicked="#clickedOverdueMenuLibrarian"
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="libraryMenuLibrarian"
                                        styleClass="manage-library-icon-inactive"
                                    />
                                    <Region
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="usersMenuLibrarian"
                                        styleClass="manage-users-icon-active"
                                    />
                                    <Region
                                        onMouseClicked="#clickedManageUsersMenuLibrarian"
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="accountMenuLibrarian"
                                        styleClass="account-icon-active"
                                    />
                                    <Region
                                        onMouseClicked="#clickedAccountMenuLibrarian"
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                            <StackPane>
                                <children>
                                    <ImageView
                                        fx:id="signOutMenuLibrarian"
                                        styleClass="sign-out-icon-active"
                                    />
                                    <Region
                                        onMouseClicked="#clickedSignOutMenuLibrarian"
                                        style="-fx-background-color: transparent;"
                                    />
                                </children>
                            </StackPane>
                        </children>
                    </FlowPane>
                </children>
            </StackPane>
        </StackPane>
    </top>

    <!-- Main Content Section -->
    <center>
        <VBox
            alignment="TOP_CENTER"
            spacing="10.0"
            BorderPane.alignment="CENTER"
        >

            <!-- Search Box -->
            <StackPane>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </StackPane>

            <!-- Results Box -->
            <StackPane
                VBox.vgrow="ALWAYS"
            >
                <children>
                    <VBox
                        styleClass="results-box"
                    >
                        <padding>
                            <Insets
                                bottom="20.0"
                                left="10.0"
                                right="10.0"
                            />
                        </padding>
                        <children>
                            <VBox
                                prefWidth="390.0"
                                spacing="8.0"
                            >
                                <children>
                                    <Label
                                        alignment="TOP_LEFT"
                                        styleClass="label-title"
                                        text="Modify Item: Book (not Course Litterature)"
                                    />
                                    <GridPane
                                        hgap="15.0"
                                        vgap="15.0"
                                    >
                                        <columnConstraints>
                                            <ColumnConstraints
                                                hgrow="SOMETIMES"
                                                minWidth="10.0"
                                                prefWidth="100.0"
                                            />
                                            <ColumnConstraints
                                                hgrow="SOMETIMES"
                                                minWidth="10.0"
                                                prefWidth="100.0"
                                            />
                                            <ColumnConstraints
                                                hgrow="SOMETIMES"
                                                minWidth="10.0"
                                                prefWidth="100.0"
                                            />
                                        </columnConstraints>
                                        <rowConstraints>
                                            <RowConstraints
                                                minHeight="10.0"
                                                prefHeight="30.0"
                                                vgrow="SOMETIMES"
                                            />
                                            <RowConstraints
                                                minHeight="10.0"
                                                prefHeight="30.0"
                                                vgrow="SOMETIMES"
                                            />
                                            <RowConstraints
                                                minHeight="10.0"
                                                prefHeight="30.0"
                                                vgrow="SOMETIMES"
                                            />
                                            <RowConstraints
                                                minHeight="10.0"
                                                prefHeight="30.0"
                                                vgrow="SOMETIMES"
                                            />
                                            <RowConstraints
                                                minHeight="10.0"
                                                prefHeight="30.0"
                                                vgrow="SOMETIMES"
                                            />
                                            <RowConstraints
                                                minHeight="10.0"
                                                prefHeight="30.0"
                                                vgrow="SOMETIMES"
                                            />
                                        </rowConstraints>
                                        <children>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                            >
                                                <children>
                                                    <Label
                                                        text="Title *"
                                                    />
                                                    <TextField
                                                        fx:id="bookTitleTextFieldLibrarian"
                                                        VBox.vgrow="ALWAYS"
                                                    >
                                                        <VBox.margin>
                                                            <Insets />
                                                        </VBox.margin>
                                                    </TextField>
                                                </children>
                                                <GridPane.margin>
                                                    <Insets />
                                                </GridPane.margin>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                GridPane.rowIndex="1"
                                            >
                                                <children>
                                                    <Label
                                                        text="ISBN13 **"
                                                    />
                                                    <TextField
                                                        fx:id="bookIsbn13TextFieldLibrarian"
                                                    />
                                                </children>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                GridPane.rowIndex="2"
                                            >
                                                <children>
                                                    <Label
                                                        text="ISBN10 **"
                                                    />
                                                    <TextField
                                                        fx:id="bookIsbn10TextFieldLibrarian"
                                                    />
                                                </children>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                GridPane.rowIndex="3"
                                            >
                                                <children>
                                                    <Label
                                                        text="Publisher"
                                                    />
                                                    <TextField
                                                        fx:id="bookPublisherTextFieldLibrarian"
                                                    />
                                                </children>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                GridPane.rowIndex="4"
                                            >
                                                <children>
                                                    <Label
                                                        text="Language *"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookLanguageComboBoxLibrarian"
                                                        editable="false"
                                                        VBox.vgrow="ALWAYS"
                                                    />
                                                </children>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                spacing="3.0"
                                                GridPane.columnIndex="1"
                                                GridPane.halignment="CENTER"
                                                GridPane.rowIndex="1"
                                                GridPane.valignment="CENTER"
                                            >
                                                <children>
                                                    <Label
                                                        text="Location *"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookFloorComboBoxLibrarian"
                                                        editable="false"
                                                        promptText="Floor "
                                                    />
                                                    <ComboBox
                                                        fx:id="bookSectionComboBoxLibrarian"
                                                        editable="false"
                                                        layoutX="10.0"
                                                        layoutY="25.0"
                                                        promptText="Section "
                                                    />
                                                    <ComboBox
                                                        fx:id="bookShelfComboBoxLibrarian"
                                                        editable="false"
                                                        layoutX="10.0"
                                                        layoutY="48.0"
                                                        promptText="Shelf "
                                                    />
                                                    <ComboBox
                                                        fx:id="bookPositionComboBoxLibrarian"
                                                        editable="false"
                                                        layoutX="10.0"
                                                        layoutY="71.0"
                                                        promptText="Position "
                                                    />
                                                </children>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                spacing="3.0"
                                                GridPane.columnIndex="1"
                                                GridPane.rowIndex="3"
                                            >
                                                <children>
                                                    <Label
                                                        text="Author(s)"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookAuthorComboBoxLibrarian1"
                                                        editable="false"
                                                        promptText="author *"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookAuthorComboBoxLibrarian2"
                                                        editable="false"
                                                        layoutX="10.0"
                                                        layoutY="25.0"
                                                        promptText="co-author"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookAuthorComboBoxLibrarian3"
                                                        editable="false"
                                                        layoutX="10.0"
                                                        layoutY="48.0"
                                                        promptText="co-author"
                                                    />
                                                </children>
                                                <opaqueInsets>
                                                    <Insets />
                                                </opaqueInsets>
                                                <GridPane.margin>
                                                    <Insets
                                                        top="55.0"
                                                    />
                                                </GridPane.margin>
                                            </VBox>
                                            <VBox
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                spacing="3.0"
                                                GridPane.columnIndex="2"
                                            >
                                                <children>
                                                    <Label
                                                        text="Genre(s)"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookGenreComboBoxLibrarian1"
                                                        editable="false"
                                                        promptText="genre *"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookGenreComboBoxLibrarian2"
                                                        editable="false"
                                                        promptText="genre"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookGenreComboBoxLibrarian3"
                                                        editable="false"
                                                        promptText="genre"
                                                    />
                                                </children>
                                                <GridPane.margin>
                                                    <Insets
                                                        top="60.0"
                                                    />
                                                </GridPane.margin>
                                            </VBox>
                                            <VBox
                                                layoutX="387.0"
                                                layoutY="12.0"
                                                prefHeight="200.0"
                                                prefWidth="100.0"
                                                spacing="3.0"
                                                GridPane.columnIndex="2"
                                                GridPane.rowIndex="3"
                                            >
                                                <children>
                                                    <Label
                                                        text="Keyword(s)"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookKeywordComboBoxLibrarian1"
                                                        editable="false"
                                                        promptText="keyword *"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookKeywordComboBoxLibrarian2"
                                                        editable="false"
                                                        promptText="keyword"
                                                    />
                                                    <ComboBox
                                                        fx:id="bookKeywordComboBoxLibrarian3"
                                                        editable="false"
                                                        promptText="keyword"
                                                    />
                                                </children>
                                                <GridPane.margin>
                                                    <Insets
                                                        top="30.0"
                                                    />
                                                </GridPane.margin>
                                            </VBox>
                                        </children>
                                        <padding>
                                            <Insets
                                                bottom="5.0"
                                                top="5.0"
                                            />
                                        </padding>
                                    </GridPane>
                                    <HBox
                                        alignment="CENTER"
                                        spacing="50.0"
                                    >
                                        <children>
                                            <VBox>
                                                <children>
                                                    <Label
                                                        text="* = Mandatory fields"
                                                    />
                                                    <Label
                                                        text="** = One of marked fields mandatory"
                                                    />
                                                </children>
                                            </VBox>
                                            <Button
                                                fx:id="cancelChangeBookButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedCancelChangeBookButtonLibrarian"
                                                text="Cancel"
                                            />
                                            <Button
                                                fx:id="deleteBookButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedDeleteBookButtonLibrarian"
                                                text="Delete Book"
                                            />
                                            <Button
                                                fx:id="manageCopiesButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedManageCopiesButtonLibrarian"
                                                text="Manage Copies"
                                            />
                                            <Button
                                                fx:id="saveChangesBookButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedSaveChangesBookButtonLibrarian"
                                                text="Save Changes"
                                            />
                                        </children>
                                        <padding>
                                            <Insets
                                                top="20.0"
                                            />
                                        </padding>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                        <StackPane.margin>
                            <Insets
                                bottom="10.0"
                                left="10.0"
                                right="10.0"
                            />
                        </StackPane.margin>
                    </VBox>
                </children>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
