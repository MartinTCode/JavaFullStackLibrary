<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    fx:id="mainPane"
    stylesheets="@../styles/common.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
>

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region styleClass="top-menu-region" />

         <!-- Top Menu Buttons -->
         <StackPane BorderPane.alignment="CENTER">
            <children>
               <FlowPane styleClass="flow-pane-padding">
                  <children>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="homeMenuLibrarian"
                               styleClass="home-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedHomeMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="searchMenuLibrarian"
                               styleClass="search-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSearchMenyLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="overdueMenuLibrarian"
                               styleClass="overdue-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedOverdueMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="libraryMenuLibrarian"
                               styleClass="manage-library-icon-inactive"
                           />
                           <Region
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="usersMenuLibrarian"
                               styleClass="manage-users-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedManageUsersMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="accountMenuLibrarian"
                               styleClass="account-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedAccountMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="signOutMenuLibrarian"
                               styleClass="sign-out-icon-active"
                           />
                           <Region
                               onMouseClicked="#clickedSignOutMenuLibrarian"
                               style="-fx-background-color: transparent;"
                           />
                        </children>
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox
          alignment="TOP_CENTER"
          spacing="10.0"
          BorderPane.alignment="CENTER"
      >

         <!-- Search Box -->
         <StackPane>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>

         <!-- Results Box -->
         <StackPane VBox.vgrow="ALWAYS">
            <children>
               <VBox styleClass="results-box">
                  <padding>
                     <Insets
                         bottom="20.0"
                         left="10.0"
                         right="10.0"
                     />
                  </padding>
                  <children>
                     <VBox
                         prefWidth="390.0"
                         spacing="5.0"
                     >
                        <children>
                           <Label
                               alignment="TOP_LEFT"
                               styleClass="label-title"
                               text="Modify Item: DVD"
                           />
                           <GridPane
                               hgap="15.0"
                               vgap="30.0"
                           >
                             <columnConstraints>
                               <ColumnConstraints
                                   hgrow="SOMETIMES"
                                   minWidth="10.0"
                               />
                               <ColumnConstraints
                                   hgrow="SOMETIMES"
                               />
                               <ColumnConstraints
                                   hgrow="SOMETIMES"
                               />
                             </columnConstraints>
                             <rowConstraints>
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                               <RowConstraints
                                   minHeight="10.0"
                                   prefHeight="30.0"
                                   vgrow="SOMETIMES"
                               />
                             </rowConstraints>
                              <children>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                 >
                                    <children>
                                       <Label text="Title *" />
                                       <TextField
                                           fx:id="dvdTitleTextFieldLibrarian"
                                           VBox.vgrow="ALWAYS"
                                       >
                                          <VBox.margin>
                                             <Insets />
                                          </VBox.margin>
                                       </TextField>
                                    </children>
                                    <GridPane.margin>
                                       <Insets />
                                    </GridPane.margin>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     GridPane.rowIndex="1"
                                 >
                                    <children>
                                       <Label text="IMDBC" />
                                       <TextField
                                           fx:id="dvdImdbcTextFieldLibrarian"
                                       />
                                    </children>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     GridPane.rowIndex="2"
                                 >
                                    <children>
                                       <Label text="Publisher" />
                                       <TextField
                                           fx:id="dvdPublisherTextFieldLibrarian"
                                       />
                                    </children>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     GridPane.rowIndex="5"
                                 >
                                    <children>
                                       <Label text="Language *" />
                                       <ComboBox
                                           fx:id="dvdLanguageComboBoxLibrarian"
                                           editable="false"
                                           VBox.vgrow="ALWAYS"
                                       />
                                    </children>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     spacing="3.0"
                                     GridPane.columnIndex="1"
                                     GridPane.rowIndex="5"
                                 >
                                    <children>
                                       <Label text="Actor(s)" />
                                       <ComboBox
                                           fx:id="dvdActorComboBox1"
                                           editable="false"
                                           promptText="actor *"
                                       />
                                       <ComboBox
                                           fx:id="dvdActorComboBox2"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="25.0"
                                           promptText="actor"
                                       />
                                       <ComboBox
                                           fx:id="dvdActorComboBox3"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="48.0"
                                           promptText="actor"
                                       />
                                    </children>
                                    <GridPane.margin>
                                       <Insets top="50.0" />
                                    </GridPane.margin>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     spacing="3.0"
                                     GridPane.columnIndex="1"
                                     GridPane.rowIndex="3"
                                 >
                                    <children>
                                       <Label text="Director(s)" />
                                       <ComboBox
                                           fx:id="dvdDirectorComboBox1"
                                           editable="false"
                                           promptText="director *"
                                       />
                                       <ComboBox
                                           fx:id="dvdDirectorComboBox2"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="25.0"
                                           promptText="co-director"
                                       />
                                       <ComboBox
                                           fx:id="dvdDirectorComboBox3"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="48.0"
                                           promptText="co-director"
                                       />
                                    </children>
                                    <opaqueInsets>
                                       <Insets />
                                    </opaqueInsets>
                                    <GridPane.margin>
                                       <Insets />
                                    </GridPane.margin>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     spacing="3.0"
                                     GridPane.columnIndex="2"
                                 >
                                    <children>
                                       <Label text="Genre(s)" />
                                       <ComboBox
                                           fx:id="dvdGenreComboBox1"
                                           editable="false"
                                           promptText="genre *"
                                       />
                                       <ComboBox
                                           fx:id="dvdGenreComboBox2"
                                           editable="false"
                                           promptText="genre"
                                       />
                                       <ComboBox
                                           fx:id="dvdGenreComboBox3"
                                           editable="false"
                                           promptText="genre"
                                       />
                                    </children>
                                    <GridPane.margin>
                                       <Insets top="45.0" />
                                    </GridPane.margin>
                                 </VBox>
                                 <VBox
                                     layoutX="387.0"
                                     layoutY="12.0"
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     spacing="3.0"
                                     GridPane.columnIndex="2"
                                     GridPane.rowIndex="3"
                                 >
                                    <children>
                                       <Label text="Keyword(s)" />
                                       <ComboBox
                                           fx:id="dvdKeywordComboBox1"
                                           editable="false"
                                           promptText="keyword *"
                                       />
                                       <ComboBox
                                           fx:id="dvdKeywordComboBox2"
                                           editable="false"
                                           promptText="keyword"
                                       />
                                       <ComboBox
                                           fx:id="dvdKeywordComboBox3"
                                           editable="false"
                                           promptText="keyword"
                                       />
                                    </children>
                                    <GridPane.margin>
                                       <Insets />
                                    </GridPane.margin>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     GridPane.rowIndex="3"
                                 >
                                    <children>
                                       <Label text="Country of Origin" />
                                       <TextField
                                           fx:id="dvdCountryTextFieldLibrarian"
                                       />
                                    </children>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     GridPane.rowIndex="4"
                                 >
                                    <children>
                                       <Label text="Age Limit" />
                                       <TextField
                                           fx:id="dvdAgeLimitTextFieldLibrarian"
                                       />
                                    </children>
                                 </VBox>
                                 <VBox
                                     prefHeight="200.0"
                                     prefWidth="100.0"
                                     spacing="3.0"
                                     GridPane.columnIndex="1"
                                 >
                                    <children>
                                       <Label text="Location *" />
                                       <ComboBox
                                           fx:id="dvdFloorComboBoxLibrarian"
                                           editable="false"
                                           promptText="Floor "
                                       />
                                       <ComboBox
                                           fx:id="dvdSectionComboBoxLibrarian"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="25.0"
                                           promptText="Section "
                                       />
                                       <ComboBox
                                           fx:id="dvdShelfComboBoxLibrarian"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="48.0"
                                           promptText="Shelf "
                                       />
                                       <ComboBox
                                           fx:id="dvdPositionComboBoxLibrarian"
                                           editable="false"
                                           layoutX="10.0"
                                           layoutY="71.0"
                                           promptText="Position "
                                       />
                                    </children>
                                    <GridPane.margin>
                                       <Insets top="70.0" />
                                    </GridPane.margin>
                                 </VBox>
                              </children>
                              <padding>
                                 <Insets
                                     bottom="5.0"
                                     top="5.0"
                                 />
                              </padding>
                           </GridPane>
                           <HBox
                               alignment="CENTER"
                               spacing="80.0"
                           >
                              <children>
                                            <VBox>
                                                <children>
                                                    <Label
                                                        text="* = Mandatory fields"
                                                    />
                                                    <Label
                                                        text="** = One of marked fields mandatory"
                                                    />
                                                </children>
                                            </VBox>
                                            <Button
                                                fx:id="cancelChangeDvdButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedCancelChangeDvdButtonLibrarian"
                                                text="Cancel"
                                            />
                                            <Button
                                                fx:id="deleteDvdButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedDeleteDvdButtonLibrarian"
                                                text="Delete Dvd"
                                            />
                                            <Button
                                                fx:id="saveChangesDvdButtonLibrarian"
                                                mnemonicParsing="false"
                                                onMouseClicked="#clickedSaveChangesDvdButtonLibrarian"
                                                text="Save Changes"
                                            />
                                        </children>
                              <padding>
                                 <Insets top="20.0" />
                              </padding>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
                  <StackPane.margin>
                     <Insets
                         bottom="10.0"
                         left="10.0"
                         right="10.0"
                     />
                  </StackPane.margin>
               </VBox>
            </children>
         </StackPane>

      </VBox>
   </center>

</BorderPane>
