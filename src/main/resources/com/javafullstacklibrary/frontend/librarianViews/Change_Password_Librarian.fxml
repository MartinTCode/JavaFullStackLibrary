<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    fx:id="mainPane"
    minHeight="400.0"
    minWidth="600.0"
    prefHeight="400.0"
    prefWidth="600.0"
    stylesheets="@../styles/common.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
>

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region styleClass="top-menu-region" />

         <!-- Top Menu Buttons -->
         <StackPane BorderPane.alignment="CENTER">
            <children>
               <FlowPane styleClass="flow-pane-padding">
                  <children>
                     <StackPane>
                        <children>
                           <ImageView fx:id="homeMenuLibrarian" styleClass="home-icon-active" />
                           <Region onMouseClicked="#clickedHomeMenuLibrarian" style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView fx:id="searchMenuLibrarian" styleClass="search-icon-active" />
                           <Region onMouseClicked="#clickedSearchMenuLibrarian" style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView fx:id="overdueMenuLibrarian" styleClass="overdue-icon-active" />
                           <Region onMouseClicked="#clickedOverdueMenuLibrarian" style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView fx:id="libraryMenuLibrarian" styleClass="manage-library-icon-active" />
                           <Region onMouseClicked="#clickedLibraryMenuLibrarian" style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView fx:id="usersMenuLibrarian" styleClass="manage-users-icon-active" />
                           <Region onMouseClicked="#clickedUsersMenuLibrarian" style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView
                               fx:id="accountMenuLibrarian"
                               styleClass="account-icon-inactive"
                           />
                           <Region style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                     <StackPane>
                        <children>
                           <ImageView fx:id="signOutMenuLibrarian" styleClass="sign-out-icon-active" />
                           <Region onMouseClicked="#clickedSignOutMenuLibrarian" style="-fx-background-color: transparent;" />
                        </children>
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox
          alignment="TOP_CENTER"
          spacing="10.0"
          BorderPane.alignment="CENTER"
      >

         <!-- Search Box -->
         <StackPane>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>

         <!-- Results Box -->
         <StackPane VBox.vgrow="ALWAYS">
            <children>
               <HBox
                   prefHeight="100.0"
                   prefWidth="200.0"
                   spacing="10.0"
               >
                  <children>
                     <VBox spacing="10.0" styleClass="results-box">
                        <children>
                           <Button
                               fx:id="userInfoButtonLibrarian"
                               mnemonicParsing="false"
                               onMouseClicked="#clickedUserInfoLibrarian"
                               text=" User Information  "
                           />
                           <Button
                               fx:id="changePasswordButtonLibrarian"
                               mnemonicParsing="false"
                               styleClass="button-selected"
                               text="Change Password"
                           />
                           <Button
                               fx:id="signOutButtonLibrarian"
                               mnemonicParsing="false"
                               onMouseClicked="#clickedSignOutButtonLibrarian"
                               text="        Sign Out       "
                           />
                        </children>
                     </VBox>
                     <VBox styleClass="results-box">
                        <padding>
                           <Insets left="10.0" right="10.0" />
                        </padding>
                        <children>
                           <VBox prefWidth="390.0" spacing="10.0">
                              <children>
                                 <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" />
                                 <VBox prefWidth="390.0" spacing="20.0">
                                    <children>
                                       <Label
                                           alignment="TOP_LEFT"
                                           styleClass="label-title"
                                           text="Change Password"
                                       />
                                       <HBox alignment="CENTER_LEFT">
                                          <children>
                                             <Label
                                                 prefWidth="171.0"
                                                 styleClass="label-left"
                                                 text="Current Password"
                                             >
                                                <opaqueInsets>
                                                   <Insets />
                                                </opaqueInsets>
                                             </Label>
                                             <TextField
                                                 fx:id="currentPasswordFieldLibrarian"
                                                 styleClass="text-field"
                                             />
                                          </children>
                                       </HBox>
                                       <HBox
                                           alignment="CENTER_LEFT"
                                           layoutX="10.0"
                                           layoutY="33.0"
                                       >
                                          <children>
                                             <Label
                                                 prefWidth="171.0"
                                                 styleClass="label-left"
                                                 text="New Password"
                                             >
                                                <opaqueInsets>
                                                   <Insets />
                                                </opaqueInsets>
                                             </Label>
                                             <TextField
                                                 fx:id="newPasswordFieldLibrarian"
                                                 styleClass="text-field"
                                             />
                                          </children>
                                       </HBox>
                                       <HBox
                                           alignment="CENTER_LEFT"
                                           layoutX="10.0"
                                           layoutY="78.0"
                                       >
                                          <children>
                                             <Label
                                                 prefWidth="171.0"
                                                 styleClass="label-left"
                                                 text="Confirm New Password"
                                             >
                                                <opaqueInsets>
                                                   <Insets />
                                                </opaqueInsets>
                                             </Label>
                                             <TextField
                                                 fx:id="confirmNewPasswordFieldLibrarian"
                                                 styleClass="text-field"
                                             />
                                          </children>
                                       </HBox>
                                       <HBox
                                           alignment="CENTER_LEFT"
                                           layoutX="10.0"
                                           layoutY="113.0"
                                       />
                                       <HBox
                                           alignment="CENTER_LEFT"
                                           layoutX="10.0"
                                           layoutY="148.0"
                                       />
                                       <HBox
                                           alignment="CENTER_LEFT"
                                           layoutX="10.0"
                                           layoutY="183.0"
                                       />
                                       <HBox alignment="CENTER" spacing="70.0">
                                          <children>
                                             <Button
                                                 fx:id="confirmNewPasswordButtonLibrarian"
                                                 mnemonicParsing="false"
                                                 onMouseClicked="#clickedConfirmNewPasswordButtonLibrarian"
                                                 text="Confirm"
                                             />
                                          </children>
                                          <padding>
                                             <Insets top="20.0" />
                                          </padding>
                                       </HBox>
                                    </children>
                                 </VBox>
                              </children>
                           </VBox>
                        </children>
                     </VBox>
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" />
                  </padding>
               </HBox>
            </children>
         </StackPane>

      </VBox>
   </center>

</BorderPane>
