<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<BorderPane 
    fx:id="mainPane" 
    minHeight="400.0" 
    minWidth="600.0" 
    prefHeight="400.0" 
    prefWidth="600.0" 
    stylesheets="@../styles/common.css" 
    xmlns="http://javafx.com/javafx/23.0.1" 
    xmlns:fx="http://javafx.com/fxml/1">

   <!-- Top borderPane layer -->
   <top>
      <StackPane 
          prefHeight="55.0">
         <!-- Top Menu Background -->
         <Region 
             styleClass="top-menu-region" />
            
         <!-- Top Menu Buttons -->
         <StackPane 
             prefHeight="55.0" 
             BorderPane.alignment="CENTER">
            <children>
               <FlowPane 
                   prefHeight="55.0" 
                   styleClass="flow-pane-padding">
                  <children>
                     <!-- Home Button -->
                     <ImageView 
                         fx:id="homeMenuBorrower" 
                         styleClass="home-icon-inactive" />

                     <!-- Search Button -->
                     <ImageView 
                         fx:id="searchMenuBorrower" 
                         onMouseClicked="#clickedSearchMenuBorrower" 
                         styleClass="search-icon-active" />

                     <!-- Loan Button -->
                     <ImageView 
                         fx:id="loanMenuBorrower" 
                         onMouseClicked="#clickedLoanMenuBorrower" 
                         styleClass="loan-icon-active" />

                     <!-- Return Button -->
                     <ImageView 
                         fx:id="returnMenuBorrower" 
                         onMouseClicked="#clickedReturnMenuBorrower" 
                         styleClass="return-icon-active" />

                     <!-- Account Button -->
                     <ImageView 
                         fx:id="accountMenuBorrower" 
                         onMouseClicked="#clickedAccountMenuBorrower" 
                         styleClass="account-icon-active" />

                     <!-- Sign Out Button -->
                     <ImageView 
                         fx:id="signOutMenuBorrower" 
                         onMouseClicked="#clickedSignOutMenuBorrower" 
                         styleClass="sign-out-icon-active" />
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Center borderPane layer -->
   <center>
      <!-- Center Content -->
      <StackPane 
          prefHeight="270.0" 
          prefWidth="612.0" 
          BorderPane.alignment="CENTER">
         <children>
            <!-- Semi-transparent Rectangle -->
            <Rectangle 
                height="218.0" 
                width="451.0" 
                styleClass="rectangle-center" />

            <!-- Welcome Text -->
            <VBox 
                alignment="CENTER" 
                prefHeight="200.0" 
                prefWidth="100.0">
               <children>
                  <Text 
                      strokeType="OUTSIDE" 
                      styleClass="text-title" 
                      text="Welcome to the Library" />
                  <Text 
                      strokeType="OUTSIDE" 
                      text="Navigate using the top menu" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>

   <!-- Bottom borderPane layer -->
   <bottom>
      <!-- Bottom Menu -->
      <FlowPane 
          alignment="CENTER_RIGHT" 
          prefHeight="55.0" 
          styleClass="bottom-menu-padding" 
          BorderPane.alignment="CENTER_RIGHT">
         <children>
            <!-- Bottom Menu Content -->
         </children>
      </FlowPane>
   </bottom>
</BorderPane>