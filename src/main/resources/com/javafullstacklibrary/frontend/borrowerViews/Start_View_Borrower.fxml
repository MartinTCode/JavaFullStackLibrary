<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPane" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/common.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Top borderPane layer -->
   <top>
      <StackPane prefHeight="55.0">
      <!-- Top Menu Background -->
         <Region styleClass="top-menu-region" />
            
      <!-- Top Menu Buttons-->
      <StackPane prefHeight="55.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Top Menu Buttons -->
            <FlowPane prefHeight="55.0" styleClass="flow-pane-padding">
               <children>
                  <!-- Home Button -->
                  <ImageView fx:id="homeMenuBorrower" styleClass="home-icon-inactive">
                  </ImageView>

                  <!-- Search Button -->
                  <ImageView fx:id="searchMenuBorrower" onMouseClicked="#clickedSearchMenuBorrower" styleClass="search-icon-active">
                  </ImageView>
                     <ImageView fx:id="loanMenuBorrower" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#clickedLoanMenuBorrower" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../figma_icons/navBarButtons/LoanNavigationButtonClickable.png" />
                        </image>
                     </ImageView>
                     <ImageView fx:id="returnMenuBorrower" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#clickedReturnMenuBorrower" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../figma_icons/navBarButtons/ReturnNavigationButtonClickable.png" />
                        </image>
                     </ImageView>
                     <ImageView fx:id="accountMenuBorrower" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#clickedAccountMenuBorrower" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../figma_icons/navBarButtons/AccountNavigationButtonClickable.png" />
                        </image>
                     </ImageView>
                     <ImageView fx:id="signOutMenuBorrower" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#clickedSignOutMenuBorrower" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../figma_icons/navBarButtons/SignOutNavigationButtonClickable.png" />
                        </image>
                     </ImageView>
               </children>
            </FlowPane>
         </children>
      </StackPane> <!-- Closing tag added here -->
      </StackPane>
   </top>

   <!-- Center borderPane layer -->
   <center>
      <!-- Center Content -->
      <StackPane prefHeight="270.0" prefWidth="612.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Semi-transparent Rectangle -->
            <Rectangle height="218.0" styleClass="rectangle-center" width="451.0" />

            <!-- Welcome Text -->
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Text strokeType="OUTSIDE" styleClass="text-title" text="Welcome to the Library" />
                  <Text strokeType="OUTSIDE" text="Navigate using the top menu" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>

   <!-- Bottom borderPane layer -->
   <bottom>
      <!-- Bottom Menu -->
      <FlowPane alignment="CENTER_RIGHT" prefHeight="55.0" styleClass="bottom-menu-padding" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <!-- Bottom Menu Content -->
         </children>
      </FlowPane>
   </bottom>
</BorderPane>
