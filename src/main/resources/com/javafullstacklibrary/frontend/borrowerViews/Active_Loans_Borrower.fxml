<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane 
   fx:id="mainPane"
   minHeight="400.0"
   minWidth="600.0"
   prefHeight="400.0"
   prefWidth="600.0"
   stylesheets="@../styles/common.css"
   xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1">

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region 
            styleClass="top-menu-region" />

         <!-- Top Menu Buttons -->
         <StackPane 
            BorderPane.alignment="CENTER">
            <children>
               <FlowPane 
                  styleClass="flow-pane-padding">
                  <children>
                     <!-- Home Button -->
                     <StackPane>
                        <ImageView 
                           fx:id="startMenuBorrower"
                           styleClass="home-icon-active" />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedHomeMenuBorrower"/>
                     </StackPane>
                     <!-- Search Button -->
                     <StackPane>
                        <ImageView 
                           fx:id="searchMenuBorrower"
                           styleClass="search-icon-active" />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedSearchMenuBorrower"/>
                     </StackPane>
                     <!-- Loan Button -->
                     <StackPane>
                        <ImageView 
                           fx:id="loanMenuBorrower"
                           styleClass="loan-icon-active" />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedLoanMenuBorrower"/>
                     </StackPane>
                     <!-- Return Button -->
                     <StackPane>
                        <ImageView 
                           fx:id="returnMenuBorrower"
                           styleClass="return-icon-active" />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedReturnMenuBorrower"/>
                     </StackPane>
                     <!-- Account Button -->
                     <StackPane>
                        <ImageView 
                           fx:id="accountMenuBorrower"
                           styleClass="account-icon-inactive" />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedAccountMenuBorrower"/>
                     </StackPane>
                     <!-- Sign Out Button -->
                     <StackPane>
                        <ImageView 
                           fx:id="signOutMenuBorrower"
                           styleClass="sign-out-icon-active" />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedSignOutMenuBorrower"/>
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox 
         alignment="TOP_CENTER"
         spacing="10.0"
         BorderPane.alignment="CENTER">

         <!-- Search Box -->
         <StackPane>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>
         <AnchorPane 
            VBox.vgrow="ALWAYS">
            <children>
               <HBox 
                  prefHeight="100.0"
                  prefWidth="200.0"
                  spacing="10.0"
                  AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
                  <children>
                     <VBox 
                        spacing="10.0"
                        styleClass="results-box"
                        HBox.hgrow="ALWAYS">
                        <children>
                           <Button 
                              fx:id="userInfoButtonBorrower"
                              mnemonicParsing="false"
                              onMouseClicked="#clickedUserInfoButtonBorrower"
                              text=" User Information  " />
                           <Button 
                              fx:id="activeLoansButtonBorrower"
                              mnemonicParsing="false"
                              styleClass="button-selected"
                              text="    Active Loans     " />
                           <Button 
                              fx:id="changePasswordButtonBorrower"
                              mnemonicParsing="false"
                              onMouseClicked="#clickedChangePasswordButtonBorrower"
                              text="Change Password" />
                           <Button 
                              fx:id="signOutButtonBorrower"
                              mnemonicParsing="false"
                              onMouseClicked="#clickedSignOutButtonBorrower"
                              text="        Sign Out       " />
                        </children>
                     </VBox>
                     <VBox 
                        styleClass="results-box"
                        HBox.hgrow="ALWAYS">
                        <padding>
                           <Insets 
                              left="10.0"
                              right="10.0" />
                        </padding>
                        <children>
                           <VBox 
                              prefWidth="390.0"
                              spacing="10.0"
                              VBox.vgrow="ALWAYS">
                              <children>
                                 <Label 
                                    alignment="TOP_LEFT"
                                    styleClass="label-title"
                                    text="Active Loans" />
                                 <ScrollPane 
                                    fx:id="loansScrollPaneBorrower"
                                    fitToWidth="true"
                                    hbarPolicy="NEVER"
                                    styleClass="scroll-pane-custom"
                                    VBox.vgrow="ALWAYS">
                                    <content>
                                       <VBox 
                                          fx:id="loansContainerBorrower"
                                          spacing="10.0"
                                          styleClass="results-box" />
                                    </content>
                                 </ScrollPane>
                              </children>
                           </VBox>
                        </children>
                     </VBox>
                  </children>
                  <padding>
                     <Insets 
                        bottom="10.0"
                        left="10.0"
                        right="10.0" />
                  </padding>
               </HBox>
            </children>
         </AnchorPane>

      </VBox>
   </center>

</BorderPane>
