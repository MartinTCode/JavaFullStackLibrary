<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    fx:id="mainPane"
    minHeight="400.0"
    minWidth="600.0"
    prefHeight="400.0"
    prefWidth="600.0"
    stylesheets="@../styles/common.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
>

   <!-- Top Menu Section -->
   <top>
      <StackPane>
         <!-- Background -->
         <Region styleClass="top-menu-region" />

         <!-- Top Menu Buttons -->
         <StackPane BorderPane.alignment="CENTER">
            <children>
               <FlowPane styleClass="flow-pane-padding">
                  <children>
                     <!-- Home Button -->
                     <StackPane>
                        <ImageView
                            fx:id="startMenuBorrower"
                            styleClass="home-icon-active"
                        />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedHomeMenuBorrower"/>
                     </StackPane>
                     <!-- Search Button -->
                     <StackPane>
                        <ImageView
                            fx:id="searchMenuBorrower"
                            styleClass="search-icon-active"
                        />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedSearchMenuBorrower"/>
                     </StackPane>
                     <!-- Loan Button -->
                     <StackPane>
                        <ImageView
                            fx:id="loanMenuBorrower"
                            styleClass="loan-icon-active"
                        />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedLoanMenuBorrower"/>
                     </StackPane>
                     <!-- Return Button -->
                     <StackPane>
                        <ImageView
                            fx:id="returnMenuBorrower"
                            styleClass="return-icon-active"
                        />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedReturnMenuBorrower"/>
                     </StackPane>
                     <!-- Account Button -->
                     <StackPane>
                        <ImageView
                            fx:id="accountMenuBorrower"
                            styleClass="account-icon-active"
                        />
                        <Region style="-fx-background-color: transparent;"
                           onMouseClicked="#clickedAccountMenuBorrower"/>
                     </StackPane>
                     <!-- Sign Out Button -->
                     <StackPane>
                        <ImageView
                            fx:id="signOutMenuBorrower"
                            styleClass="sign-out-icon-inactive"
                        />
                        <!-- No Region for current/active page -->
                     </StackPane>
                  </children>
               </FlowPane>
            </children>
         </StackPane>
      </StackPane>
   </top>

   <!-- Main Content Section -->
   <center>
      <VBox
          alignment="TOP_CENTER"
          spacing="10.0"
          BorderPane.alignment="CENTER"
      >

         <!-- Search Box -->
         <StackPane>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </StackPane>
         <AnchorPane VBox.vgrow="ALWAYS">
            <children>
               <HBox
                   prefHeight="100.0"
                   prefWidth="200.0"
                   spacing="10.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0"
               >
                  <children>
                     <VBox
                         spacing="10.0"
                         styleClass="results-box"
                         HBox.hgrow="ALWAYS"
                     >
                        <children>
                           <Button
                               fx:id="userInfoButtonBorrower"
                               mnemonicParsing="false"
                               onMouseClicked="#clickedUserInfoButtonBorrower"
                               text=" User Information  "
                           />
                           <Button
                               fx:id="activeLoansButtonBorrower"
                               mnemonicParsing="false"
                               onMouseClicked="#clickedActiveLoansButtonBorrower"
                               text="    Active Loans     "
                           />
                           <Button
                               fx:id="changePasswordButtonBorrower"
                               mnemonicParsing="false"
                               onMouseClicked="#clickedChangePasswordButtonBorrower"
                               text="Change Password"
                           />
                           <Button
                               fx:id="signOutButtonBorrower"
                               mnemonicParsing="false"
                               styleClass="button-selected"
                               text="        Sign Out       "
                           />
                        </children>
                     </VBox>
                     <VBox
                         styleClass="results-box"
                         HBox.hgrow="ALWAYS"
                     >
                        <padding>
                           <Insets left="10.0" right="10.0" />
                        </padding>
                        <children>
                           <VBox
                               prefWidth="390.0"
                               spacing="10.0"
                               VBox.vgrow="ALWAYS"
                           >
                              <children>
                                 <Label
                                     alignment="TOP_LEFT"
                                     styleClass="label-title"
                                     text="Sign Out"
                                 />
                                 <Label text="Are you sure you want to sign out?" />
                                 <HBox
                                     prefHeight="100.0"
                                     prefWidth="200.0"
                                     spacing="10.0"
                                 >
                                    <children>
                                       <Button
                                           fx:id="confirmSignOutButtonBorrower"
                                           mnemonicParsing="false"
                                           onMouseClicked="#clickedConfirmSignOutButtonBorrower"
                                           text="Yes, sign out "
                                       />
                                       <Button
                                           fx:id="cancelSignOutButtonBorrower"
                                           mnemonicParsing="false"
                                           onMouseClicked="#clickedCancelSignOutButtonBorrower"
                                           text="No, back to start"
                                       />
                                    </children>
                                 </HBox>
                              </children>
                           </VBox>
                        </children>
                     </VBox>
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" />
                  </padding>
               </HBox>
            </children>
         </AnchorPane>

      </VBox>
   </center>

</BorderPane>
